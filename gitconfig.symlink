[credential]
    helper = /opt/boxen/bin/boxen-git-credential

[core]
    editor = vim
    excludesfile = /opt/boxen/config/git/gitignore

[hub]
    protocol = https

[user]
    name = Tommy Pyatt
    email = tommypyatt@users.noreply.github.com

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = true
    ui = true
    pager = true

[color "status"]
    added = green
    changed = yellow
    untracked = red

[color "diff"]
    meta = yellow
    old = red
    new = green

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    pop = "stash pop"
    last = "diff HEAD^ HEAD"
    l = "log --oneline --graph"
    ignore = "update-index --assume-unchanged"
    unignore = "update-index --no-assume-unchanged"
    ignored = !git ls-files -v | grep "^[[:lower:]]"

[core]
    editor = vim
    excludesfile = /opt/boxen/config/git/gitignore
    autocrlf = input
    fileMode = false

[push]
    default = current

[filter "lfs"]
    smudge = git-lfs smudge %f
    required = true
    clean = git-lfs clean %f

